= form_for @phone_number do |f|
  - if @phone_number.errors.any?
    #error_explanation
      %h2= "#{pluralize(@phone_number.errors.count, "error")} prohibited this phone_number from being saved:"
      %ul
        - @phone_number.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :number
    = f.number_field :number
  .field
    = f.label :area_code
    = f.text_field :area_code_id
  .actions
    = f.submit 'Save'
